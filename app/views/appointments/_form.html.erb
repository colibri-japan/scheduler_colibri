<%= form_for [@planning, appointment], remote: true do |form| %>
  <% if appointment.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(appointment.errors.count, "error") %> prohibited this appointment from being saved:</h2>

    <ul>
      <% appointment.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div id="form-options-container">
    <div class="appointment-section-title">簡易編集</div>

    <%= link_to "<i class='glyphicon glyphicon-th-list' style='color:white;font-size:12px'></i> #{toggle_edit_requested_text(appointment)}".html_safe, planning_appointment_toggle_edit_requested_path(@planning, appointment), method: :patch, class: 'btn btn-secondary btn-sm', data: {confirm: confirm_request_edit_message(appointment)}, remote: true unless appointment.new_record? %>
    <%= link_to "<i class='glyphicon glyphicon-remove' style='color:white;font-size:12px'></i> #{toggle_cancel_text(appointment)}".html_safe, planning_appointment_toggle_cancelled_path(@planning, appointment), method: :patch, class: 'btn btn-secondary btn-sm', data: {confirm: confirm_cancel_message(appointment)}, remote: true unless appointment.new_record? %>
    <%= link_to '<i class="glyphicon glyphicon-trash" style="color:white;font-size:12px"></i> 削除'.html_safe, planning_appointment_archive_path(@planning, appointment), method: :patch, class: 'btn btn-secondary btn-sm', data: {confirm: 'サービスが削除され、スケジュールから消えます。'}, remote: true unless appointment.new_record? %>

  </div>


  <div class="modal-body">
    <div class="appointment-section-title">詳細編集</div>
    
    <div class="form-group">
      <%= form.label :title, "サービスタイプ", class: "colibri-form-label" %><span class='required-field'>*</span>
      <%= form.select :title, options_from_collection_for_select(@corporation.services.without_nurse_id.order_by_title, 'title', 'title', appointment.title), id: :appointment_title, required: true, title: 'サービスタイプを選択してください', required_pattern: '.*\S+.*', class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :color, "カラー", class: "colibri-form-label" %>
      <%= form.select(:color,  options_for_select([['デフォルト', '#7AD5DE'], ['青', '#3D9BF3'], ['緑', '#3BC359'], ['ピンク', '#EE59A6'], ['紫', '#A587F6'], ['オレンジ', '#F98050'], ['黄色', '#FBC32D'], ['赤', '#EE584C']], appointment.color), id: :appointment_color) %>
  　</div> 

    <div class="form-group">
      <%= form.label :start_time, "スタート", class: "colibri-form-label" %>
      <%= form.datetime_select :starts_at, minute_step: 5 %>
    </div>

    <div class="form-group">
      <%= form.label :end_time, "終了", class: "colibri-form-label" %>
      <%= form.datetime_select :ends_at, minute_step: 5 %>
    </div>

    <div class="form-group">
      <%= form.label :nurse_id, "従業員名", class: "colibri-form-label" %><span class='required-field'>*</span>
      <%= form.select :nurse_id, grouped_options_for_select(@nurses.group_full_timer_for_select, appointment.nurse_id), required: true %>
    </div>

    <div class="form-group">
      <%= form.label :patient_id, "利用者名", class: "colibri-form-label" %><span class='required-field'>*</span>
      <%= form.collection_select(:patient_id, @patients, :id, :name, {prompt: '利用者選択'}, {:required => true}) %>
    </div>

    <% unless @master%>
      <div class="form-group">
        <%= form.label :edit_requested, "調整中リスト", class: "colibri-form-label" %>
        <%= form.check_box :edit_requested, class: "edit-requested-toggle", data: {requested: appointment.edit_requested} %>
      </div>
    <% end %>

    <% unless @master%>
      <div class="form-group">
        <%= form.label :cancelled, "キャンセル", class: "colibri-form-label" %>
        <%= form.check_box :cancelled, class: "cancelled-toggle", data: {cancelled: appointment.cancelled} %>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :description, "コメント", class: "colibri-form-label" %>
      <%= form.text_area :description, id: :appointment_description, class: "form-control" %>
    </div>


    <div class="actions">
      <%= form.submit "セーブ", class: "btn btn-info btn-block" %>
    </div>
  </div>

 
<% end %>
