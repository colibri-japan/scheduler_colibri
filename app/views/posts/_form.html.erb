<%= form_for post, remote: true do |form| %>

  <div class="form-group">
    <%= form.label :body, "メッセージ", class: "colibri-form-label" %><span class='required-field'>*</span>
    <%= form.text_area :body, id: :nurse_name, required: true, class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit '共有する', class: 'btn btn-info' %>
    <%= link_to '削除する', post, method: :delete, remote: true, class: 'btn btn-danger' unless post.new_record? %>
  </div>

<% end %>