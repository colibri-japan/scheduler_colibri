<div id="nurse_smart_search" class="modal fade">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h1 class="colibri-small-title">従業員検索</h1>
				<button type="button" class="close" data-dismiss="modal">&times;</button>
			</div>

            <%= form_tag(nurses_smart_search_results_path, method: 'get', remote: true) do %>
                <div class="modal-body">

                    <div class="form-group">
                        <%= label_tag :team_ids, 'チーム', class: 'colibri-form-label-dark' %>
                        <%= select_tag :team_ids, options_from_collection_for_select(@teams, 'id', 'team_name'), {multiple: true, id: :team_ids} %>
                    </div>

                    <div class="form-group">
                        <%= label_tag :skills, 'スキル', class: 'colibri-form-label-dark' %>
                        <%= select_tag :skills, options_from_collection_for_select(@skills, 'name', 'name'), {multiple: true, id: :nurse_skills_tags} %>
                    </div>

                    <div class="form-group">
                        <%= label_tag :wishes, '希望内容', class: 'colibri-form-label-dark' %>
                        <%= select_tag :wishes, options_from_collection_for_select(@wishes, 'name', 'name'), {multiple: true, id: :nurse_wishes_tags} %>
                    </div>

                    <div class="form-group">
                        <%= label_tag :wished_areas, '希望エリア', class: 'colibri-form-label-dark' %>
                        <%= select_tag :wished_areas, options_from_collection_for_select(@wished_areas, 'name', 'name'), {multiple: true, id: :nurse_wished_areas_tags} %>
                    </div>
                </div>

                <div class="modal-footer">
                    <div class="btn btn-colibri-light" data-dismiss="modal">閉じる</div>
                    <%= submit_tag '検索する', class: 'btn btn-info text-white', remote: true %>
                </div>
            <% end %>

		</div>
	</div>

</div>