<%= form_with model: care_manager, url: [care_manager_corporation, care_manager] do |form| %>

    <div class="modal-body">
        <%= form.label :name, "名前", class: "colibri-form-label-dark" %><span class='required-field'>*</span>
        <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="modal-body">
        <%= form.label :kana, "フリガナ", class: "colibri-form-label-dark" %>
        <%= form.text_field :kana, class: "form-control" %>
    </div>

    <% if care_manager.new_record? %>
    <% else %>
        <div class="modal-body">
            <%= form.label :care_manager_corporation_id, "事業所名", class: "colibri-form-label-dark" %>
            <%= form.collection_select(:care_manager_corporation_id, @care_manager_corporations, :id, :name, {include_blank: false, include_hidden: false}, {id: :care_manager_care_manager_corporation_id}) %>
        </div>
    <% end %>

    <div class="modal-body">
        <%= form.label :phone_number, "電話番号", class: "colibri-form-label-dark" %>
        <%= form.text_field :phone_number, class: "form-control" %>
    </div>

    <div class="modal-footer">
        <% if care_manager.new_record? %>
            <div class="btn btn-colibri-light" data-dismiss="modal">閉じる</div>
        <% else %>
            <%= link_to '削除', care_manager_corporation_care_manager_path(care_manager_corporation, care_manager), method: :delete, class: 'btn btn-danger', data: {confirm: 'ケアマネジャーが削除され、担当されていた利用者様からケアマネジャーが外されます。'} %>
        <% end %>
        <%= form.submit "確定する", class: 'btn btn-info' %>
    </div>

<% end %>