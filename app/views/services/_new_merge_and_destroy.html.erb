<div id="new_merge_and_destroy" class="modal fade">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h1 class="colibri-small-title">サービスを統合.削除する</h1>
				<button type="button" class="close" data-dismiss="modal">&times;</button>
			</div>

            <div class="modal-body">
            
                <div class="form-group">
                    <%= label_tag :service_to_delete, "削除するサービス", class: 'colibri-form-label-dark' %>
                    <%= text_field_tag :service_to_delete, value = @service.title, {class: 'form-control', readonly: true} %>
                    <%= hidden_field_tag :service_to_delete, value = @service.id, {id: 'id_of_service_to_delete'} %>
                </div>

                <div class="form-group">
                    <%= label_tag :service_to_merge, "統合先のサービス", class: "colibri-form-label-dark" %>
                    <%= select_tag :service_to_merge, options_from_collection_for_select(@services, :id, :title, {prompt: 'サービス選択'}) %>
                </div>

            </div>

            <div class="modal-footer">
                <div class="btn btn-colibri-light" data-dismiss="modal">閉じる</div>
                <div class='btn btn-info' id="merge-submit" data-url="<%= service_merge_and_destroy_path(@service) %>">統合する</div>
            </div>

		</div>
	</div>

</div>
