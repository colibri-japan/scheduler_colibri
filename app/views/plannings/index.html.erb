<%= render 'layouts/planning_menu' %>

<table>
  <thead>
    <tr>
      <th>月</th>
      <th>年</th>
    </tr>
  </thead>

  <tbody>
    <% @plannings.each do |planning| %>
      <tr>
        <td><%= planning.business_month %></td>
        <td><%= planning.business_year %></td>
        <td><%= link_to '詳細', planning %></td>
        <td><%= link_to 'エディット', edit_planning_path(planning) %></td>
        <td><%= link_to '削除', planning, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規スケジュールを作成する', new_planning_path, class: 'btn btn-info text-white' %>