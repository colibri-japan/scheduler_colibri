<%= render partial: 'plannings/planning_left_menu', locals: {view: 'settings', resource_path: current_user.schedule_default_url_option || planning_nurse_path(@planning, @main_nurse), resource_master_path: planning_nurse_master_path(@planning, @main_nurse), nurse: @main_nurse} %>

<div id="settings-menu-container" class="no-print">

	<div id="settings-menu-list">
        <ul id="settings-list">
            <li id="settings-options" class="settings-list-element"><%= link_to 'スケジュールオプション', planning_settings_path(@planning), class: 'settings-list-url' %></li>
            <li id="settings-services" class="settings-list-element settings-list-element-selected">サービスタイプ一覧</li>
            <li id="settings-services" class="settings-list-element"><%= link_to '印刷オプション', planning_printing_option_path(@planning, @corporation.printing_option), class: 'settings-list-url' %></li>
        </ul>
	</div>

</div>

<div id="settings-container">
  <%= link_to '+新規サービスタイプ', new_service_path, remote: true, class: 'btn btn-info text-white btn-margin-top' %>
  
  <div id="index-table-container">
    <table class="table table-hover">
      <thead>
        <tr>
          <th class="table-important-fields">サービスタイプ</th>
          <th class="table-important-fields">給与計算方法</th>
          <th class="table-important-fields">従業員別給与</th>
          <th class="table-important-fields">時給.単価</th>
          <th class="table-important-fields"></th>
        </tr>
      </thead>

      <tbody>
        <% @services.each do |service| %>
          <tr class="service-clickable-row" data-link="<%= edit_service_path(service, format: :js) %>">
            <td><%= service.title %></td>
            <td><%= humanize_hour_based_wage(service) %></td>
            <td><%= humanize_equal_salary(service) %></td>
            <td><%= service.unit_wage if service.equal_salary %></td>
            <td><%= link_to '統合.削除', service_new_merge_and_destroy_path(service), class: 'btn btn-secondary btn-sm', remote: true %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>


</div>




  