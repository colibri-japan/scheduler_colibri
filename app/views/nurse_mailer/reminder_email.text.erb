<%= @corporation.custom_email_intro_text if @corporation.custom_email_intro_text.present? %>

<% @appointments.each do |appointment| %>
	<%= appointment.patient.try(:name) %>様: <%= appointment.starts_at.strftime("%-d日")  %><%= weekday(appointment.starts_at) %> <%= appointment.starts_at.strftime("%-H:%M") %>~<%= appointment.ends_at.strftime("%-H:%M") %>
