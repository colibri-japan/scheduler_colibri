<div id="index-container">
    <%= link_to '+新規スケジュール', new_planning_path, class: 'btn btn-info text-white btn-margin-top' %><br/>

    <div id="index-table-container">
      <table class="table table-hover">
        <thead>
          <tr>
            <th class="table-important-fields" colspan='2'>スケジュール</th>
          </tr>
        </thead>

        <tbody>
          <% @plannings.each do |planning| %>
            <tr class="clickable-row" data-link="<%= planning_path(planning) %>">
              <td class="col-md-10"><%= planning.title %></td>
              <td class="col-md-2">
                <% if current_user.has_admin_access? %>
                  <%= link_to '削除', planning_archive_path(planning), method: :patch, class: 'btn btn-secondary btn-sm text-white', data: { confirm: 'サービス、提供されたサービス（給与管理）などを含めてスケジュールが削除されます。' } if current_user.admin? %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

</div>



