$("#service-total-<%= @provided_service.id %>").text("<%= @provided_service.total_wage %>¥");

var old_total = $("#total-salary").text().replace(/\D/g,'');
if (old_total == "") {
	old_total == "0";
};

var old_salary = "<%= @old_salary %>";
if (old_salary == "") {
	old_salary == "0";
};

var new_salary = "<%= @provided_service.total_wage %>"

var new_total = parseInt(old_total) - parseInt(old_salary) + parseInt(new_salary);

$("#total-salary").text(new_total + '¥');
