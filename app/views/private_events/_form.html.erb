<%= form_for [@planning, private_event], remote: true do |form| %>
  <% if private_event.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(private_event.errors.count, "error") %> prohibited this private_event from being saved:</h2>

    <ul>
      <% private_event.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <% unless private_event.new_record? %>
    <div id="form-options-container">
      <div class="appointment-section-title">簡易編集</div>
      <%= link_to "<i class='glyphicon glyphicon-trash' style='color:white;font-size:12px'></i> 削除".html_safe, planning_private_event_path(@planning, private_event), method: :delete, class: 'btn btn-secondary btn-sm', data: {confirm: '自社サービス以外の予定が削除されます'}, remote: true unless private_event.new_record? %>
    </div>
  <% end %>

  <div class="modal-body">
    <% unless private_event.new_record? %>
      <div class="appointment-section-title">詳細編集</div>
    <% end %>

    <div class="form-group">
      <%= form.label :title, "サービスタイトル", class: "colibri-form-label" %><span class='required-field'>*</span>
      <%= form.text_field :title, id: :private_event_title, required: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :nurse_id, "従業員名", class: "colibri-form-label" %>
      <%= form.select :nurse_id, grouped_options_for_select(@nurses.group_full_timer_for_select, private_event.nurse_id, {prompt: '従業員選択'}) %>
    </div>

    <div class="form-group">
      <%= form.label :patient_id, "利用者名", class: "colibri-form-label" %>
      <%= form.collection_select(:patient_id, @patients, :id, :name, {prompt: '利用者選択'}) %>
    </div>

    <div class="form-group">
      <%= form.label :start_time, "開始日時", class: "colibri-form-label" %>
      <%= form.datetime_select :starts_at, id: :private_event_start_time, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :end_time, "終了日時", class: "colibri-form-label" %>
      <%= form.datetime_select :ends_at, id: :private_event_end_time, class: "form-control" %>
    </div>


    <div class="form-group">
      <%= form.label :description, "コメント", class: "colibri-form-label" %>
      <%= form.text_area :description, id: :private_event_description, class: "form-control" %>
    </div>

    <%= hidden_field_tag :patient_resource, true if params[:patient_resource].present? %>

    <div class="actions">
      <%= form.submit "セーブする", class: "btn btn-info btn-block" %>
    </div>

  </div>
<% end %>
