$('#remote_container').html('<%= j render "phone_completion_report" %>');

if ($('.phone_activity_container.activity_with_planning_menu').length > 0) {
    $('.phone_activity_container.activity_with_planning_menu').hide()
}
if($('#detail-container').length > 0) {
    $('#detail-container').hide()
}

$('.activity_back_button').click(function(){
    $('.phone_activity_container').hide()
    if ($('#detail-container').length > 0) {
        $('#detail-container').show()
    }
    if ($('.phone_activity_container.activity_with_planning_menu').length > 0) {
        $('.phone_activity_container.activity_with_planning_menu').show()
    }
})

mobileScrollTop()
completionFormSelectize()
uncheckableRadioButtons()
calculateGroceriesChange()

$('#toggle-detailed-report').click(function(){
    $('#report-detail-container').toggle()
})

$('.toggleable-subsection-title').click(function(){
    $(this).next().toggle()
})

$('#submit-completion-report-button').click(function(){
    $('#submit_completion_report_form').click()
})