<div class="phone_activity_container">
    <div class="activity_header">
        <div class="activity_back_button">
            <%= image_tag "back_arrow_white.svg", width: '25px', class: 'activity_back_icon' %>
        </div>
        <div class="activity_title">
            <%= @completion_report.present? ? '実績編集' : 'サービス編集' %>
        </div>
    </div>
    <div class="activity_body">
    	<% if @completion_report.present? %>
			<div id="toggle-appointment-and-completion-report">
				<div class="appointment-menu-toggle-item item-selected"><span class="glyphicon glyphicon-calendar glyphicon-no-hover-style" style="font-size:19px"></span>サービス</div>
				<div class="appointment-menu-toggle-item"><%= image_tag('dark-grey-report.svg', width: '26px', style: "margin-bottom:2px") %> 実施記録</div>
			</div>
			<div id="edit-appointment">
				<%= render 'simple_form', appointment: @appointment %>
			</div>
			<div id="edit-completion-report" style='display:none'>
				<%= render 'completion_reports/form_for_double_check', completion_report: @completion_report, reportable: @appointment %>
			</div>
		<% else %>
			<%= render 'form', appointment: @appointment %>
		<% end %>
    </div>
</div>