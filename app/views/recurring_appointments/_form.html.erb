<%= form_for [@planning, recurring_appointment], remote: true do |form| %>
  <% if recurring_appointment.errors.any? %>
  <div id="error_explanation">
    <h2>エラーが発生しました：</h2>

    <ul>
      <% recurring_appointment.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <% unless recurring_appointment.new_record? %>
    <div id="form-options-container">
      <div class="appointment-section-title">簡易編集</div>
        <div class="form-group">
          <span class='colibri-form-label'>繰り返し/期間</span>
          <% if recurring_appointment.master %>
            <%= frequency_to_text(recurring_appointment) %><%= weekday_full(recurring_appointment.anchor) %>
            <%= recurring_appointment.anchor.strftime("%-m月%-d日") %> ~ <%= recurring_appointment.termination_date.strftime("%-m月%-d日") if recurring_appointment.termination_date.present? %>
          <% else %>
            <%= @appointments.map{|appointment| appointment.starts_at.strftime("%-m月%-d日") }.to_sentence(words_connector: ' / ', last_word_connector: ' / ', two_words_connector: ' / ') %>
          <% end %>
        </div>

        <% if recurring_appointment.master %>
          <div class='btn btn-secondary btn-sm text-white' id='recurring-appointment-terminate' data-terminate-url="<%= planning_recurring_appointment_terminate_path(@planning, recurring_appointment) %>">サービス停止</div>
        <% end %>
        <%= link_to "<i class='glyphicon glyphicon-remove' style='color:white;font-size:12px'></i> 全繰り返し#{toggle_cancel_text(recurring_appointment)}".html_safe, planning_recurring_appointment_toggle_cancelled_path(@planning, recurring_appointment), method: :patch, remote: true, class: 'btn btn-secondary btn-sm' %>
        <%= link_to '<i class="glyphicon glyphicon-trash" style="color:white;font-size:12px"></i> 全繰り返し削除'.html_safe, planning_recurring_appointment_archive_path(@planning, recurring_appointment), method: :patch, remote: true, class: 'btn btn-secondary btn-sm', data: {confirm: 'サービスが削除され、全繰り返しがスケジュールから消えます。'}  %>
    </div>
  <% end %>



  <div class="modal-body">
    <% unless recurring_appointment.new_record? %>
      <div class="appointment-section-title">詳細編集</div>
    <% end %>
    
    <% if recurring_appointment.new_record? %>

      <% frequency_options =  [['毎週',0], ['隔週',7], ['第一、三、五週目', 1], ['第二、四週目', 3], ['第一○曜日', 4], ['第二○曜日', 8], ['第三○曜日', 9], ['第四○曜日', 10], ['最後の週', 5], ['最後の週以外毎週', 6]] %>
      <% frequency_options << ['その日のみ', 2] if @master == false %>

      <div class="form-group">
        <%= form.label :frequency, "頻度", class: "colibri-form-label" %>
        <% new_frequency = @master == true ? 0 : 2 %>
        <% frequency = recurring_appointment.frequency ||= new_frequency %>
        <%= form.select(:frequency,  options_for_select(frequency_options, new_frequency), id: :recurring_appointment_frequency) %>
      </div>

    <% end %>

      <% unless recurring_appointment.new_record? %>
        <div class="form-group">
          <%= form.label :editing_occurrences_after, '編集するサービス', class: "colibri-form-label" %><span class='required-field'>*</span>
          <%= form.select :editing_occurrences_after, options_for_select([params[:date]], params[:date]), {prompt: '全繰り返し'} %>
        </div>
      <% end %>

      <div class="form-group">
        <%= form.label :title, "サービスタイプ", class: "colibri-form-label" %><span class='required-field'>*</span>
        <%= form.select :title, options_from_collection_for_select(@corporation.services.without_nurse_id.order_by_title, 'title', 'title', recurring_appointment.title), id: :recurring_appointment_title, required: true, title: 'サービスタイプを選択してください', required_pattern: '.*\S+.*', class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :color, "カラー", class: "colibri-form-label" %>
        <%= form.select(:color,  options_for_select([['デフォルト', '#7AD5DE'], ['青', '#3D9BF3'], ['緑', '#3BC359'], ['ピンク', '#EE59A6'], ['紫', '#A587F6'], ['オレンジ', '#F98050'], ['黄色', '#FBC32D'], ['赤', '#EE584C']], recurring_appointment.color), id: :recurring_appointment_color) %>
      </div> 

      <% if recurring_appointment.new_record? %>

        <div class="form-group">
          <%= form.label :anchor, "初回", class: "colibri-form-label" %>
          <%= form.date_select :anchor, id: :recurring_appointment_anchor, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :end_day, "初回終了日", class: "colibri-form-label" %>
          <%= form.date_select :end_day, id: :recurring_appointment_anchor, class: "form-control" %>
        </div>

      <% end %>

      <% if recurring_appointment.new_record? || recurring_appointment.duration == 0 %>

      <div class="form-group">
        <%= form.label :starts_at, "スタート時間", class: "colibri-form-label" %>
        <%= form.time_select :starts_at, {minute_step: 5} %>
      </div>

      <div class="form-group">
        <%= form.label :ends_at, "終了時間", class: "colibri-form-label" %>
        <%= form.time_select :ends_at, {minute_step: 5} %>
      </div>

      <% end %>

      <div class="form-group">
        <%= form.label :nurse_id, "従業員名", class: "colibri-form-label" %><span class='required-field'>*</span>
        <%= form.select :nurse_id, grouped_options_for_select(@nurses.group_full_timer_for_select, recurring_appointment.nurse_id), required: true %>
      </div>

      <div class="form-group">
        <%= form.label :patient_id, "利用者名", class: "colibri-form-label" %><span class='required-field'>*</span>
        <%= form.collection_select(:patient_id, @patients, :id, :name, {prompt: '利用者選択'}, {:required => true}) %>
      </div>

      <% unless @master %>
        <div class="form-group">
          <%= form.label :edit_requested, "調整中リスト", class: "colibri-form-label" %>
          <%= form.check_box :edit_requested, class: "edit-requested-toggle", data: {requested: recurring_appointment.edit_requested} %>
        </div>

        <% unless recurring_appointment.new_record? %>
          <div class="form-group">
            <%= form.label :cancelled, "キャンセル", class: "colibri-form-label" %>
            <%= form.check_box :cancelled, class: "cancelled-toggle", data: {cancelled: recurring_appointment.cancelled} %>
          </div>
        <% end %>
      <% end %>

      <div class="form-group">
        <%= form.label :description, "詳細・コメント", class: "colibri-form-label" %>
        <%= form.text_area :description, id: :recurring_appointment_description, class: "form-control" %>
      </div>

      <%= hidden_field_tag(:master, 'true') if @master == true %>
      <%= hidden_field_tag(:start, Date.today) %>
      <%= hidden_field_tag(:end, Date.today) %>

      <div class="actions">
        <%= form.submit '編集する', class: 'btn btn-info btn-block', id: 'save-recurring-appointment' %>
      </div>
  </div>
<% end %>
