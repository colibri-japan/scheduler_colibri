<%= javascript_tag do %>
	window.appointmentsURL = "<%= j planning_appointments_url(@planning, params: {patient_id: @patient.id}) %>";
	window.recurringAppointmentsURL = "<%= j planning_recurring_appointments_url(@planning, params: {patient_id: @patient.id}) %>";
	window.createRecurringAppointmentURL = "<%= j new_planning_recurring_appointment_url(@planning) %>"
	window.validRangeStart = "<%= j @start_valid %>";
	window.validRangeEnd = "<%= j @end_valid %>";
	window.patientId = "<%= j @patient.id.to_s %>"
<% end %>

<%= render 'layouts/planning_menu' %>
<%= render 'plannings/planning_patients_submenu' %>

<h2><%= @patient.name %>のスケジュール</h2>

<div id="activity-show-button-container">
	<span id="zoom-button" class="btn btn-success">ズーム</span>
	<span id="unzoom-button" class="btn btn-secondary">元のズーム</span>
	<span id="activity-show-button" class="btn btn-success">最新編集履歴</span>
	<span id="activity-hide-button" class="btn btn-secondary">最新編集履歴を閉じる</span>
</div>

<div id="planning-container">
	<div class="patient_calendar"></div>
	<div id="planning-activity-module">
		<p class="planning-activity-module-title">最新編集履歴</p>
		<div id="planning-activities">
			<% @activities.each do |activity| %>
				<%= render partial: 'activities/activity', locals: {activity: activity} %>
			<% end %>
		</div>
	</div>
</div>




