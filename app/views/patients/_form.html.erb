<%= form_with(model: patient, local: true) do |form| %>
  <% if patient.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(patient.errors.count, "error") %> prohibited this patient from being saved:</h2>

    <ul>
      <% patient.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :patient_name %>
  </div>

  <div class="field">
    <%= form.label :phone_number %>
    <%= form.text_field :phone_number, id: :patient_phone_number %>
  </div>

  <div class="field">
    <%= form.label :phone_mail %>
    <%= form.text_field :phone_mail, id: :patient_phone_mail %>
  </div>

  <div class="field">
    <%= form.label :address %>
    <%= form.text_area :address, id: :patient_address %>
  </div>


  <div class="actions">
    <%= form.submit 'セーブする', class: 'btn btn-info text-white' %>
  </div>
<% end %>