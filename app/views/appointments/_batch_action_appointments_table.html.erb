<table class="table">
    <thead>
        <th>タイプ</th>
        <th><%= "#{client_resource_name(@corporation.business_vertical)}" %></th>
        <th>従業員</th>
        <th>日程</th>
    </thead>
    <tbody>
        <% appointments.each do |appointment| %>
            <tr class="appointment_row" id="<%= appointment.id %>">
                <td><%= appointment.try(:title) %></td>
                <td><%= appointment.patient.try(:name) %></td>
                <td><%= appointment.nurse.try(:name) %></td>
                <td><%= date_and_time(appointment) %></td>
            </tr>
        <% end %>
    </tbody>
</table>