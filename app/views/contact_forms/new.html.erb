<div id="contact-form-background">
    <div id="colibri-contact-form-container">
        <p id="colibri-contact-form-title">お問い合わせ</p>
        <%= form_for @contact_form do |form| %>
            <div class="form-group row">
                <%= form.label :name, "名前", class: "colibri-form-label-dark home col-sm-3" %>
                <%= form.text_field :name, required: true, class: 'form-control home col-sm-8' %>
            </div>
            <div class="form-group row">
                <%= form.label :company_name, "会社名", class: "colibri-form-label-dark home col-sm-3" %>
                <%= form.text_field :company_name, required: true, class: 'form-control home col-sm-8' %>
            </div>
            <div class="form-group row">
                <%= form.label :email, "メールアドレス", class: "colibri-form-label-dark home col-sm-3" %>
                <%= form.email_field :email, required: true, class: 'form-control home col-sm-8' %>
            </div>
            <div class="form-group row">
                <%= form.label :message, "メッセージ", class: "colibri-form-label-dark home col-sm-3" %>
                <%= form.text_area :message, required: true, class: 'form-control home col-sm-8' %>
            </div>
            
            <div class="form-group actions home">
                <%= form.submit "送信する", class: "btn btn-info col-sm-8 offset-md-3" %>
            </div>
        <% end %>
    </div>
</div>

<%= render 'layouts/footer' %>