<%= form_for [@planning, recurring_appointment], remote: true do |form| %>
  <% if recurring_appointment.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(recurring_appointment.errors.count, "error") %> prohibited this appointment from being saved:</h2>

    <ul>
      <% recurring_appointment.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title, "サービスタイプ", class: "colibri-form-label" %>
    <%= form.text_field :title, id: :recurring_appointment_title, required: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :description, "詳細・コメント", class: "colibri-form-label" %>
    <%= form.text_area :description, id: :recurring_appointment_description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :color, "カラー", class: "colibri-form-label" %>
    <%= form.select(:color,  options_for_select([['デフォルト', ''], ['青', '#3D9BF3'], ['緑', '#3BC359'], ['ピンク', '#EE59A6'], ['紫', '#A587F6'], ['オレンジ', '#F98050'], ['黄色', '#FBC32D'], ['赤', '#EE584C']], recurring_appointment.color), id: :recurring_appointment_color) %>
  </div> 

  <div class="form-group">
    <%= form.label :anchor, "初日", class: "colibri-form-label" %>
    <%= form.date_select :anchor, id: :recurring_appointment_anchor, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :end_day, "終了日", class: "colibri-form-label" %>
    <%= form.date_select :end_day, id: :recurring_appointment_anchor, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :start, "スタート時間", class: "colibri-form-label" %>
    <%= form.time_select :start, id: :recurring_appointment_start, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :end, "終了時間", class: "colibri-form-label" %>
    <%= form.time_select :end, id: :recurring_appointment_end, class: "form-control" %>
  </div>

  <% if recurring_appointment.new_record? %>

	  <div class="form-group">
	    <%= form.label :frequency, "頻度", class: "colibri-form-label" %>
	    <%= form.select(:frequency,  options_for_select([['毎週',0], ['2週間に一回', 1], ['その日のみ', 2]], recurring_appointment.frequency), id: :recurring_appointment_frequency) %>
	  </div>

  <% end %>

  <div class="form-group">
    <%= form.label :nurse_id, "ヘルパー名", class: "colibri-form-label" %>
    <%= form.collection_select(:nurse_id, @nurses, :id, :name, {prompt: 'ヘルパー選択'}, {:required => true}) %>
  </div>

  <div class="form-group">
    <%= form.label :patient_id, "利用者名", class: "colibri-form-label" %>
    <%= form.collection_select(:patient_id, @patients, :id, :name, {prompt: '利用者選択'}, {:required => true}) %>
  </div>

  <% unless recurring_appointment.new_record? %>
  	<%= form.label :edited_occurrence, 'エディットする日', class: "colibri-form-label" %>
  	<%= form.select(:edited_occurrence, options_for_select(@collection), id: :recurring_appointment_edited_occurrence) %>
  <% end %>

  <% if current_user.admin? && recurring_appointment.new_record? || current_user.admin? && recurring_appointment.master %>
    <div class="form-group">
      <%= form.label :master, "マスターとしてセーブする", class: "colibri-form-label" %>
      <%= form.check_box :master, checked: current_user.admin? && recurring_appointment.new_record? || current_user.admin? && recurring_appointment.master %>
    </div>
  <% end %>


  <%= hidden_field_tag(:q, 'master') if @master == true %>

  <div class="actions">
    <%= form.submit 'セーブする', class: 'btn btn-info btn-block form-control' %>
    <%= link_to '削除', planning_recurring_appointment_path(@planning, recurring_appointment), method: :delete, class: 'btn btn-danger', data: {confirm: 'このサービスのすべての繰り返しが削除されます。'}, remote: true unless recurring_appointment.new_record? %>
    <%= link_to 'マスターから削除', planning_recurring_appointment_path(@planning, recurring_appointment, master: "1"), method: :delete, class: 'btn btn-danger', data: {confirm: 'このサービスのすべての繰り返しが削除され、マスターから削除されます。'}, remote: true unless recurring_appointment.new_record? || recurring_appointment.master == false %>
    
  </div>
<% end %>

<% unless recurring_appointment.new_record? %>
  <div class="form-group">
    <p class="colibri-form-label">サービス日程詳細</p>
    <table>
      <% @appointments.each do |appointment| %>
        <tr>
          <th><%= appointment.strftime("%-m月%-d日") %></th>
          <th>
            <%= form_for [recurring_appointment, recurring_appointment.deleted_occurrences.build], remote: true do |f| %>
              <%= f.hidden_field :deleted_day, value: appointment %>
              <%= f.submit '削除する', data: {confirm: "#{appointment.strftime("%-m月%-d日")}のサービスが削除されます"} %>
            <% end %>
          </th>
        </tr>
      <% end %>
    </table>

  </div>
<% end %>
