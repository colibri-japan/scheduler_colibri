<%= javascript_tag do %>
	window.appointmentsURL = "<%= j planning_appointments_url(@planning, params: {patient_id: @patient.id}) %>";
	window.recurringAppointmentsURL = "<%= j planning_recurring_appointments_url(@planning) %>";
	window.createRecurringAppointmentURL = "<%= j new_planning_recurring_appointment_url(@planning) %>"
	window.createUnavailabilityURL = "<%= j new_planning_unavailability_url(@planning) %>"
	window.unavailabilitiesUrl = "<%= j planning_unavailabilities_url(@planning, params: {patient_id: @patient.id}) %>"
	window.bootstrapToggleUrl = "<%= j new_planning_recurring_appointment_url(@planning) %>"
	window.validRangeStart = "<%= j @start_valid %>";
	window.patientId = "<%= j @patient.id.to_s %>";
	window.defaultView = "<%= j @corporation.default_individual_view %>";
	window.minTime = "<%= j current_user.corporation.business_start_hour %>";
	window.maxTime = "<%= j current_user.corporation.business_end_hour %>";
	window.holidays = "<%= j HolidayJp.between(Date.new(@planning.business_year, @planning.business_month, 1).beginning_of_day, Date.new(@planning.business_year, @planning.business_month, -1).end_of_day).to_json.html_safe %>"
<% end %>

<%= render 'plannings/planning_patients_submenu' %>

<div id="resource-list-container" class="no-print">
	<div id="toggle-patients-nurses-wrapper">
		<input type="checkbox" checked id="toggle-patients-nurses">
	</div>
	<div id="resource-container" class="scrollbar-custom">
		<div id="patients-resource" class="no-print">
			<% @patients.each do |patient| %>
				<p class="resource-list-element <%= 'resource-selected' if patient.id == @patient.id %>" data-url="<%= planning_patient_path(@planning, patient) %>"><%= patient.try(:name) %></p>
			<% end %>
		</div>
		<div id="nurses-resource" class="hide-resource no-print">
			<div class="nurses-resource-subsection-title">正社員</div>
			<% @full_timers.each do |nurse| %>
				<p class="resource-list-element" data-url="<%= planning_nurse_path(@planning, nurse) %>"><%= nurse.try(:name) %></p>
			<% end %>
			<div class="nurses-resource-subsection-title">非正社員</div>
			<% @part_timers.each do |nurse| %>
				<p class="resource-list-element" data-url="<%= planning_nurse_path(@planning, nurse) %>"><%= nurse.try(:name) %></p>
			<% end %>
		</div>
	</div>

</div>

<div id="detail-container">

	<div id="detail-planning-container">
		<div id="detail-planning-title">
			<div class="planning-resource-module-title">
				<span id="resource-name-wrapper"><%= @patient.try(:name) %>様</span>
				<button id="resource-details-button" class="btn btn-sm">詳細</button>
			</div>
			<div id="activity-show-button-container" class="no-print">
				<input type="checkbox" checked data-toggle="toggle" class="bootstrap-toggle">
				<div class="btn btn-success text-white" id="print-button"><span class="glyphicon glyphicon-print"></span> 印刷</div>
				<span id="activity-show-button" class="btn btn-success"><span class="glyphicon glyphicon-time"></span> 最新編集履歴</span>
				<span id="activity-hide-button" class="btn btn-secondary"><span class="glyphicon glyphicon-time"></span> 最新編集履歴を閉じる</span>
			</div>
		</div>

		<div class="print font-size-large">
			住所：<%= @patient.address %><br/>
			電話番号：<%= @patient.phone_number %>
		</div>

		<div id="planning-container">
			<div class="patient_calendar"></div>
			<div id="planning-activity-module" class="no-print">
				<p class="planning-activity-module-title">最新編集履歴</p>
				<div id="planning-activities">
					<% @activities.each do |activity| %>
						<%= render partial: 'activities/activity', locals: {activity: activity} %>
					<% end %>
				</div>
			</div>
		</div>

		<div id="resource-details-panel">

			<div id="resource-details-block">
				<div id="resource-detail-header">
					<h1 class="colibri-xs-title"><%= @patient.name %>の詳細</h1>
					<span class="close-button-span" value="閉じる" onclick="$('#resource-details-panel').toggle()">x</span>
				</div>
				<table>
					<tr>
						<td class="details-table-head">メール</td>
						<td><%= @patient.phone_mail %></td>
					</tr>
					<tr>
						<td class="details-table-head">電話</td>
						<td><%= @patient.phone_number %></td>
					</tr>
					<tr>
						<td class="details-table-head">週所</td>
						<td><%= @patient.address %></td>
					</tr>
					<tr>
						<td class="details-table-head">特徴</td>
						<td><%= @patient.caveat_list %></td>
					</tr>
					<tr>
						<td class="details-table-head">備考</td>
						<td><%= @patient.description %></td>
					</tr>
				</table>
			</div>

			<div id="service-history-block">
				<div class='resource-details-block-title'>過去のヘルパー</div>
				<% @nurses_with_services.limit(3).each_with_index do |nurse, index| %>
					<div class="resource-history"><%= index + 1 %><%= " - #{nurse.name}様：" %><%= from_seconds_to_hours_minutes(nurse.sum_service_duration) %></div>
				<% end %>
				<% if @nurses_with_services.all[2..-1].present? %>
					<div class="resource-history">
						<button class='btn btn-sm btn-light' id="see-more-resource-history-button">もっと見る</button>
						<div id="more-resource-history">
							<%= @nurses_with_services.all[2..-1].map{|nurse| nurse.name }.join(', ') %>
						</div>
					</div>
				<% end %>
			</div>

			<div id="resource-action-block">
				<%= link_to 'エディット', edit_patient_path(@patient), remote: true, class: 'btn btn-info btn-block' %>
			</div>
		</div>

		<div id="recurring-appointment-details-container" class="print">
			<div class="planning-activity-module-title">サービスの詳細</div>
			<div id="appointment-comments">
				
			</div>
			
		</div>
		
	</div>
	
</div>

<div id="print-options-confirm" title="印刷にコメントを表示する">
	<p>印刷するページにサービスのコメントを表示しますか？</p>
</div>

<div id="drag-drop-confirm" title="サービス編集確認">
	<p>下記の編集がセーブされます：</p>
	<div id="drag-drop-content"></div>
</div>








