<%= render partial: 'plannings/planning_left_menu', locals: {view: 'settings', resource_payable_path: planning_nurse_payable_path(@planning, @main_nurse, params: {m: Date.today.in_time_zone('Tokyo').month, y: Date.today.in_time_zone('Tokyo').year})} %>

<%= render 'plannings/settings_submenu', view: 'users' %>

<div class="colibri-devise-form">
	<p class="colibri-devise-title"><%= t "devise.invitations.new.header" %></p>

	<%= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => {:method => :post} do |f| %>
	  <%= devise_error_messages! %>

	<% resource.class.invite_key_fields.each do |field| -%>
	<div class="form-group">
		<%= f.label field, class: "colibri-form-label" %>
		<%= f.text_field field, required: true, class: "form-control" %>
	</div>

	<% end -%>

	  <p><%= f.submit t("devise.invitations.new.submit_button"), class: 'btn btn-info btn-block form-control' %></p>
	<% end %>
</div>


