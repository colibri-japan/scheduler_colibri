<% if @planning.present? %>
  <%= render 'plannings/planning_patients_submenu' %>
<% else %>
<% end %>

<div id="index-container">

  <% if @planning.nil? %>
  <%= link_to '+新規利用者', new_patient_path, class: 'btn btn-info text-white btn-margin-top' %>
  <% end %>

  <div id="index-table-container">
    <table class="<%= @planning ? 'table table-hover' : 'table' %>">
      <thead>
        <tr>
          <th class="table-important-fields">名前</th>
          <th class="table-important-fields">電話番号</th>
          <th class="table-important-fields">メール</th>
          <th class="table-important-fields">住所</th>
          <% if current_user.admin? %>
          <th>サービス実行中</th>
          <% end %>
          <th colspan="2">アクション</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @patients.each do |patient| %>
          <tr class="<%= 'clickable-row' if @planning %>" data-link="<%= planning_patient_path(@planning, patient) if @planning %>">
            <td><%= patient.name %></td>
            <td><%= patient.phone_number %></td>
            <td><%= patient.phone_mail %></td>
            <td><%= patient.address %></td>
            <% if @planning.present? %>
              <td><%= link_to '利用者のサービスを変換する', planning_patient_path(@planning, patient) %></td>
            <% else %>
              <% if current_user.admin? %>
                <td>
                  <label class="switch" data-boolean="<%= patient.active %>">
                    <input class="switch-input" type="checkbox" id="<%= patient.id %>">
                    <span class="slider round  slider-patient" data-toggle-url="<%= toggle_active_path(patient, format: :html) %>" id="<%= patient.id %>"></span>
                  </label>
                </td>
              <% end %>
              <td><%= link_to 'エディット', edit_patient_path(patient), class: 'btn btn-success btn-sm text-white' %></td>
              <td><%= link_to '削除', patient_path(patient), method: :delete, data: {confirm: '利用者が削除されます'}, class: 'btn btn-danger btn-sm text-white' %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  
</div>





<br>
