<div id="index-container">

  <%= link_to '+事業所内のメンバーを招待する', new_user_invitation_path, class: 'btn btn-info text-white btn-margin-top' %>

  <div id="index-table-container">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>名前</th>
          <th>メール</th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr class="user-clickable-row" data-url="<%= edit_user_role_path(user) %>">
            <td><%= user.name %></td>
            <td><%= user.email %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>


</div>




  