<div id="index-container">
  <%= link_to '+新規ヘルパー', new_nurse_path, remote: true, class: 'btn btn-info text-white btn-margin-top' %>
  
  <div id="index-table-container">
    <table class="table table-hover">
      <thead>
        <tr>
          <th class="table-important-fields">名前</th>
          <th class="table-important-fields">電話番号</th>
          <th class="table-important-fields">メール</th>
          <th class="table-important-fields">正社員</th>
          <th class="table-important-fields">リマインダーを送る</th>
        </tr>
      </thead>

      <tbody>
        <% @nurses.each do |nurse| %>
          <tr class="nurse-clickable-row" data-link="<%= edit_nurse_path(nurse, format: :js) %>">
            <td><%= nurse.name %></td>
            <td><%= nurse.phone_number %></td>
            <td><%= nurse.phone_mail %></td>
            <td>
              <% if nurse.full_timer == true %>
                <span class="glyphicon glyphicon-ok" style="color: #42B97C"></span>
              <% end %> 
            </td>
            <td>
              <% if nurse.reminderable == true %>
                <span class="glyphicon glyphicon-envelope" style="color: #FFAA00"></span>
              <% end %> 
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>


</div>




  