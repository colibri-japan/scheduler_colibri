<%= javascript_tag do  %>
	window.nursePayableUrl = "<%= j planning_nurse_payable_path(@planning, @nurse) %>";
	window.excelUrl = "<%= j planning_nurse_payable_path(@planning, @nurse, format: :xlsx) %>"
<% end %>

<%= render partial: 'plannings/planning_left_menu', locals: {view: 'payable', resource_path: planning_nurse_path(@planning, @nurse), resource_master_path: planning_nurse_master_path(@planning, @nurse), resource_payable_path: planning_nurse_payable_path(@planning, @nurse, params: {m: @selected_month, y: @selected_year})} %>

<%= render partial: 'plannings/resources_submenu', locals: {individual_resource: 'true', resource_type: 'nurse', view: 'payable'} %>

<div id="payable-container">
	<div id="detail-planning-title">
		<p class="planning-activity-module-title" id="payable-title">
			<%= "#{@nurse.name}の給与" %>
			<span id="payable-query">
				<%= select_tag '年', options_for_select([['2018年', 2018],['2019年', 2019], ['2020年', 2020], ['2021年', 2021]], params[:y]), id: 'query_year' %>
				<%= select_tag '月', options_for_select([['1月', 1],['2月', 2], ['3月', 3], ['4月', 4], ['5月',5], ['6月',6], ['7月', 7], ['8月', 8], ['9月', 9], ['10月', 10], ['11月', 11], ['12月', 12]], params[:m]), id: 'query_month' %>
				<button id='payable-query-trigger' class='btn btn-sm btn-colibri-light'><span class="glyphicon glyphicon-refresh" style="color:#5f6368;font-size:0.85em"></span></button>
			</span>
		</p>
	</div>

	<% if false %>
		<div id="payable-charts">
			<% if  @total_time_pending > 0 %>
				<div id="hours-worked-pied-container">
					<%= pie_chart [['稼働時間', @total_time_worked], ['稼働予定時間', @total_time_pending]], donut: true,  width: '130px', height: '130px', legend: false, colors: ['#ffc107', '#e4e4e4'], library: {tooltips: {enabled: false}} %>
				</div>
			<% end %>
			<div id="payable-dashboard">
				<div class="payable-dashboard-text-container">
					<p class="payable-dashboard-line">稼働時間: <span class="payable-dashboard-important"><%= from_seconds_to_hours_minutes(@total_time_worked) %></span></p>
					<p class="payable-dashboard-line">稼働予定時間: <span class="payable-dashboard-important"><%= from_seconds_to_hours_minutes(@total_time_pending) %></span></p>
				</div>
			</div>
		</div>
	<% end %>

	<div id='payable-table-commands'>
	    <div id="add-provided-service-line">
			<%= link_to '+手当を追加する', new_nurse_bonus_path(@nurse), class: 'btn btn-colibri-light-gray text-white', remote: true %>
			<%= link_to "#{@nurse.try(:name)}の給与テーブル", nurse_nurse_service_wages_path(@nurse), class: 'btn btn-colibri-light-gray text-white', remote: true if current_user.corporation_admin? %>
		</div>
		<% if current_user.corporation_admin? %>
			<%= link_to '<i class="glyphicon glyphicon-download" style="color:white"></i>  ダウンロード'.html_safe, planning_nurse_payable_path(@planning, @nurse, params: {y: params[:y], m: params[:m]}, format: 'xlsx'), class:'excel-download btn btn-colibri-light-gray text-white' %>
		<% end %>
	</div>

	<div class="colibri-payable-subtitle">実績.手当詳細</div>

	<% if false %>
	<table class="table">
		<thead>
			<tr>
				<th style="width:11%"><%= sort_link(@sort_direction) %></th>
				<th style="width:13%">タイプ</th>
				<th style="width:11%">利用者名</th>
				<th style="width:10%">提供時間</th>
				<th style="width:10%">開始~終了</th>
				<% if current_user.corporation_admin? %>
					<th style="width:11%">時給/単価</th>
				<% end %>
				<% if current_user.corporation_admin? %>
					<th style="width:8%">計</th>
				<% end %>
				<th style="width:18%" colspan="2">確認<span style="font-weight:bold"><%= "(未確認#{@unverified_services_count}件)" if @unverified_services_count > 0 && @unverified_services_count != @services_from_appointments.count %></span></th>
				<th style="width:8%">編集</th>
			</tr>
			
		</thead>

		<tbody>
			<% @services_from_appointments.each do |salary_line_item| %>
			<tr>
				<td class="<%= weekend_holiday_salary_line_item_css(salary_line_item) if salary_line_item.weekend_holiday_salary_line_item? %>"><%= salary_line_item.service_date.strftime("%-m月%-d日") + ' ' + weekday(salary_line_item.service_date) %></td>
				<td><%= salary_line_item_title_with_counts(salary_line_item) %></td>
				<td><%= salary_line_item.patient.try(:name) %> </td>
				<td><%= from_seconds_to_hours_minutes(salary_line_item.service_duration) if salary_line_item.service_duration.present? %></td>
				<td><%= "#{salary_line_item.appointment_start.strftime('%H:%M')}~#{salary_line_item.appointment_end.strftime('%H:%M')}"  if salary_line_item.appointment_start.present? && salary_line_item.appointment_end.present? %></td>
				<% if current_user.corporation_admin? %>
					<td><%= "#{salary_line_item.unit_cost}¥" %></td>
				<% end %>
				<% if current_user.corporation_admin? %>
					<td id="service-total-<%= salary_line_item.id %>"><%= "#{salary_line_item.total_wage}¥" %></td>
				<% end %>
        		<td style="width:9%">
				  <div style="display:flex" id='provided-service-<%= salary_line_item.id %>'>
				    <div class='<%= 'cancelled-provided-service' if salary_line_item.cancelled == true %> <%= 'edit-requested-provided-service' if salary_line_item.appointment.present? && salary_line_item.appointment.edit_requested == true %>' style="display:flex">
					    <% if salary_line_item.cancelled == true %>
					    	<span>キャンセル</span>
					    <% elsif salary_line_item.appointment.present? && salary_line_item.appointment.edit_requested == true %>
					    	<span>調整中</span>
					    <% else %>
							<% if salary_line_item.verified? %>
							<div><span class='glyphicon glyphicon-check'  style="color: #42B97C"></span></div>
							<%= link_to "#{salary_line_item.verifier.try(:name)} #{salary_line_item.try(:verified_at).strftime('%y/%m/%d')}", toggle_verified_salary_line_item_path(salary_line_item), remote: true, method: :patch, class: 'verified-at-and-by', data: {confirm: '実績の確認が解除されます'} %>
							<% else %>
							<%= link_to '確認１', toggle_verified_salary_line_item_path(salary_line_item), method: :patch, remote: :true, class: 'btn btn-success btn-sm' if !salary_line_item.verified? %>
							<% end %>
					    <% end %>
				    </div>
				  </div>
        		</td>
				<td style='width:9%'>
				  <div style="display:flex" id='provided-service-second-verified-<%= salary_line_item.id %>'>
				    <div style="display:flex">
					    <% if salary_line_item.cancelled == true %>
							  <%= link_to '+手当', salary_line_item_new_cancellation_fee_path(salary_line_item), remote: true, class: 'btn btn-sm btn-colibri-light-gray text-white' %>
					    <% elsif salary_line_item.appointment.present? && salary_line_item.appointment.edit_requested == true %>
					    <% else %>
							<% if salary_line_item.second_verified? %>
							<div><span class='glyphicon glyphicon-check'  style="color: #42B97C"></span></div>
							<%= link_to "#{salary_line_item.second_verifier.try(:name)}#{salary_line_item.try(:second_verified_at).strftime('%y/%m/%d')}", toggle_second_verified_salary_line_item_path(salary_line_item), remote: true, method: :patch, class: 'verified-at-and-by', data: {confirm: '実績の確認が解除されます'} %>
							<% else %>
							<%= link_to '確認２', toggle_second_verified_salary_line_item_path(salary_line_item), method: :patch, remote: :true, class: 'btn btn-success btn-sm' if !salary_line_item.second_verified? %>
							<% end %>
					    <% end %>
				    </div>
				  </div>
				</td>
				<td>
					<% if salary_line_item.appointment.present? %>
						<%= link_to '編集', edit_planning_appointment_path(@planning, salary_line_item.appointment), remote: true, class: 'btn btn-sm btn-colibri-light-gray text-white' %>
					<% else %>
						<%= link_to '編集', edit_nurse_salary_line_item_path(@nurse, salary_line_item, params: {planning_id: @planning.id}), remote: true, class: 'btn btn-sm btn-colibri-light-gray text-white' %>
					<% end %>
				</td>

			</tr>
			<% end %>
			<% if current_user.corporation_admin? %>
				<tr>
					<td></td>
					<td></td>
					<td></td>
					<td></td>
					<td></td>
					<td><span id="total-salary-label" style="font-weight:bold;float:right">実績小計</span></td>
					<td id="total-salary" style="font-weight:bold"><%= @services_from_appointments.sum(:total_wage) || 0 %>¥</td>
					<td></td>
					<td></td>
					<td></td>
				</tr>
			<% end %>

		<% if current_user.corporation_admin? %>
			<% @services_from_salary_rules.each do |salary_line_item| %>
				<tr>
					<td><%= salary_line_item.service_date.strftime("%-m月%-d日") %></td>
					<td><%= salary_line_item.hour_based_wage ? salary_line_item.title : salary_line_item_title_with_counts(salary_line_item) %></td>
					<td></td>
					<td><%= from_seconds_to_hours_minutes(salary_line_item.service_duration) if salary_line_item.hour_based_wage %></td>
					<td></td>
					<td><%= salary_calculation(salary_line_item.salary_rule) if salary_line_item.salary_rule.present? %></td>
					<td><%= "#{salary_line_item.total_wage}¥" %></td>
					<td></td>
					<td></td>
					<td><%= link_to '編集', edit_nurse_salary_line_item_path(@nurse, salary_line_item), remote: true, class: 'btn btn-sm btn-secondary' unless salary_line_item.salary_rule.present? %></td>
				</tr>
			<% end %>
			<tr>
				<td></td>
				<td></td>
				<td></td>
				<td></td>
				<td></td>
				<td><span style="font-weight:bold;float:right">手当小計</span></td>
				<td style="font-weight:bold"><%= @services_from_salary_rules.sum(:total_wage) ||0 %>¥</td>
				<td></td>
				<td></td>
				<td></td>
			</tr>
			<tr>
				<td></td>
				<td></td>
				<td></td>
				<td></td>
				<td></td>
				<td><span style="font-weight:bold;float:right;margin:0">実績.手当合計</span></td>
				<td style="font-weight:bold"><%= @services_from_salary_rules.sum(:total_wage) + @services_from_appointments.sum(:total_wage) || 0 %>¥</td>
				<td></td>
				<td></td>
				<td></td>
			</tr>
		<% end %>

		</tbody>
		
	</table>
	<% end %>


	<div class="colibri-payable-subtitle">実績サービスタイプ小計</div>
	<% if false %>
	<table class="table" style='margin-bottom:30px'>
		<thead>
			<tr>
				<th>タイプ</th>
				<th>提供時間</th>
				<th>回数</th>
				<% if current_user.corporation_admin? %>
					<th>計</th>
				<% end %>
			</tr>
		</thead>
		<tbody class="text-not-bold">
			<% @grouped_services.each do |service_group| %>
				<tr>
					<td><%= service_group.title %></td>
					<td><%= from_seconds_to_hours_minutes(service_group.sum_duration) if service_group.sum_duration > 0 %></td>
					<td><%= service_group.count %></td>
					<% if current_user.corporation_admin? %>
						<td><%= service_group.sum_total_wage %>¥</td>
					<% end %>
				</tr>
			<% end %>
			<tr>
				<td>実績小計</td>
				<td><%= from_seconds_to_hours_minutes(@grouped_services_sum_duration) if @grouped_services_sum_duration > 0 %></td>
				<td><%= @grouped_services_sum_count %></td>
				<% if current_user.corporation_admin? %>
					<td><span style="font-weight:bold"><%= @grouped_services_sum_total_wage %>¥</span></td>
				<% end %>
			</tr>
		</tbody>
	</table>
	<% end %>
	
</div>