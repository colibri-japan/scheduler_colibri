<div class="colibri-devise-form"> 
  <p class="colibri-devise-title">ログイン</p>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="form-group">
      <%= f.text_field :email, autofocus: true, placeholder: "メールアドレス", class: "form-control devise-input" %>
    </div>

    <div class="form-group">
      <%= f.password_field :password, autocomplete: "off", placeholder: "パスワード", class: "form-control devise-input" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="remember-me">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "ユーザー情報を保存する" %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "ログイン", class: "btn btn-info btn-block" %>
    </div>
  <% end %>

  <div id="colibri-devise-links">
    <%= render "devise/shared/links" %>
  </div>

  
</div>


