if (window.location.pathname.includes('posts')) {
  $('#post-<%= @post.id %> > .td-patient-tag').html("<%= j @post.patient.try(:name) %>");
  $('#post-<%= @post.id %> > .td-post-body').html("<%= j simple_format(@post.body) %>");
  $('#post-<%= @post.id %> > .td-post-readers').html("<%= j @post_readers.join(', ') %>");
  $('.modal').modal('hide');
  $('.modal-backdrop').remove();
} else {
  $('#post-<%= @post.id %> > .post-body').empty()
  $('#post-<%= @post.id %> > .post-header > .post-author-wrapper').empty()
  $('#post-<%= @post.id %> > .post-body').append("<%= j simple_format(@post.body) %>")
  $('#post-<%= @post.id %> > .post-header > .post-author-wrapper').append("<%= j @post.author.name %><%= j " > #{@post.patient.name}" if @post.patient_id.present? %>")
  $('.modal').modal('hide');
  $('.modal-backdrop').remove();
}