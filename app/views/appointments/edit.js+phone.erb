$('.modal').modal('hide');
$('.modal-backdrop').remove();
$('.popover').popover('hide');
$('#remote_container').html('<%= j render "phone_edit" %>');
appointmentSelectize();
appointmentSelectizeNursePatient();
toggleEditRequested();
toggleCancelled();
colorSelectize();

if ($('#payable-container').length > 0) {
    $('#payable-container').hide()
}

$('.activity_back_button').click(function(){
    if ($('#payable-container').length > 0) {
        $('.phone_activity_container').hide()
        $('#payable-container').show()
    } else {
        $.getScript("/appointments/<%= @appointment.id %>.js")
    }
})