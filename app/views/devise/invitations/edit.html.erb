<div class="colibri-devise-form">
  <p class="colibri-devise-title"><%= t 'devise.invitations.edit.header' %></p>

  <%= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => { :method => :put } do |f| %>
    <%= devise_error_messages! %>
    <%= f.hidden_field :invitation_token, readonly: true %>

    <div class="form-group">
      <%= f.label :name, 'ご自身のユーザー名', class: "colibri-form-label" %>
      <%= f.text_field :name, required: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :kana, 'フリガナ', class: "colibri-form-label" %>
      <%= f.text_field :kana, required: true, class: "form-control" %>
    </div>


    <% if f.object.class.require_password_on_accepting %>
      <div class="form-group">
        <%= f.label :password, 'パスワード', class: "colibri-form-label" %>
        <%= f.password_field :password, required: true, class: "form-control"  %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, 'パスワードの確認', class: "colibri-form-label" %>
        <%= f.password_field :password_confirmation, required: true, class: "form-control"  %>
      </div>
    <% end %>

    <p><%= f.submit t("devise.invitations.edit.submit_button"), class: 'btn btn-info btn-block form-control' %></p>
  <% end %>
</div>


