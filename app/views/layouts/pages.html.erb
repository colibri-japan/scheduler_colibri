<%= content_for :stylesheets do %>
  #colibri-scheduler-nav {display: none}
  #colibri-pages-nav {
      background: white;
      color: black;
      position: fixed;
      top: 0px;
      width: 100%;
      height: 10vh;
      display: flex;
      justify-content: space-between;
  }
  #colibri-pages-nav > #brand-container > #brand {
      color: #302939;
  }

<% end %>

<%= content_for :content do %>
<nav id="colibri-pages-nav">
    <div id="brand-container">
        <p id="brand">Colibri</p>
    </div>
    <div>
    	<ul>
    	    <% if user_signed_in? %>
            <li class="li-float-right">
              <%= link_to 'アプリへ', root_path, title: 'ホームページ.ダッシュボード' %>  
            </li>
    	    <% else %>
    	      <li class="li-float-right"><%= link_to 'ログイン', new_user_session_path %></li>
    	      <li class="li-float-right"><%= link_to 'お問い合わせ', pages_path(:contact_form) %></li>
    	    <% end %>
    	</ul>
    <div>

</nav>
  
<% end %>

<%= render template: 'layouts/application'%>