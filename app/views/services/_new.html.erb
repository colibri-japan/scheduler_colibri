<div id="new_service" class="modal fade">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h1 class="colibri-small-title">サービスタイプを登録する</h1>
				<button type="button" class="close" data-dismiss="modal">&times;</button>
			</div>

      <%= form_for @service do |form| %>

        <% if @service.errors.any? %>
          <div id="error_explanation">
            <h2>エラーが発生しました：</h2>
            <ul>
              <% @service.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="modal-body">
          <div class="form-group">
            <%= form.label :title, "サービスタイトル", class: "colibri-form-label" %>
            <%= form.text_field :title, id: :service_title, required: true, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= form.label :category_1, "サービスタイプ1", class: "colibri-form-label" %>
            <%= form.select :category_1, options_for_select([['身体', 0], ['生活', 1], ['自費', 2], ['障害', 3], ['PS', 4], ['看護', 5], ['医療', 6]], @service.category_1), id: :service_category_1 %>
          </div>

          <div class="form-group">
            <%= form.label :category_2, "サービスタイプ2", class: "colibri-form-label" %>
            <%= form.select :category_2, options_for_select([['身体', 0], ['生活', 1], ['自費', 2], ['障害', 3], ['PS', 4], ['看護', 5], ['医療', 6]], @service.category_1), id: :service_category_2 %>
          </div>

          <div class="form-group">
            <%= form.label :category_ratio, "タイプ1割合", class: "colibri-form-label" %>
            <%= form.number_field :category_ratio, step: 0.01, id: :service_category_ratio %>
          </div>

          <div class="form-group">
            <%= form.label :hour_based_wage, "給与計算方法", class: "colibri-form-label" %>
            <%= form.check_box :hour_based_wage, checked: @service.corporation.hour_based_payroll, id: :service_hour_based_wage %>
          </div>
          <div class="form-group">
            <%= form.label :equal_salary, "給与従業員別", class: "colibri-form-label" %>
            <%= form.check_box :equal_salary, checked: @service.corporation.equal_salary, id: :service_equal_salary %>
          </div>
        </div>

        <div class="modal-footer">
          <div class="actions">
            <%= form.submit "セーブする", class: "btn btn-info btn-block" %>
          </div>
        </div>
        
      <% end %>
		</div>
	</div>

</div>
