if (window.location.pathname.includes('posts')) {
  $('#post-<%= @post.id %> > .td-patient-tag').html("<%= j @post.patient.try(:name) %>");
  $('#post-<%= @post.id %> > .td-post-body').html("<%= j simple_format(@post.body) %>");
  $('#post-<%= @post.id %> > .td-post-readers').html("<%= j @post_readers.join(', ') %>");
  $('.modal').modal('hide');
  $('.modal-backdrop').remove();
  clickableTableRowPost()
} else {
  $('.modal').modal('hide');
  $('.modal-backdrop').remove();
  $.getScript('/posts_widget.js');
  scrollPosts()
  clickablePost()
}