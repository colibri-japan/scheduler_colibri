<%= javascript_tag do %>
	window.duplicateUrl = "<%= j planning_duplicate_path(@planning) %>"
<% end %>

<div class="colibri-devise-form">
	<p class="colibri-devise-title">過去のスケジュールを反映する</p>

	<%= select_tag('duplicate-from', options_from_collection_for_select(@plannings, 'id', "title"), prompt: "スケジュール選択") %>

	<div id="duplicate-button-wrapper">
		<div id="trigger-duplication" class="btn btn-info text-white btn-block form-control" data-submitted="false">反映する</div>
	</div>
	
	
	<div id="no-duplicate-button-wrapper">
		<%= link_to '反映せずに進む', @planning, class: "btn btn-secondary text-white" %>
	</div>
	
</div>
