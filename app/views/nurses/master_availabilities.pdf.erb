<div style='margin-bottom:15px;font-size:2.5em;font-weight:bold;text-align:center'><%= @corporation.try(:name) %>空き情報</div>
<div style='margin-bottom:30px;font-size:1.7em;text-align:center'><%= @query_day.try(:strftime, '(%-m月%-d日現在)') %></div>
<div style='margin-bottom:10px;font-size:2em'>電話番号：<%= @corporation.try(:phone_number) %></div> 
<div style='margin-bottom:20px;font-size:2em'>FAX　　：<%= @corporation.try(:fax_number) %></div> 

<table class='table table-bordered table-teikyohyo'>
    <thead>
        <th style="width:25%"></th>
        <th>月</th>
        <th>火</th>
        <th>水</th>
        <th>木</th>
        <th>金</th>
        <% if @printing_option.print_saturday_availabilities %>
            <th>土</th>
        <% end %>
        <% if @printing_option.print_sunday_availabilities %>
            <th>日</th>
        <% end %>
    </thead>
    <tbody>
        <% @master_availabilities.each do |slot, availabilities_per_day| %>
            <tr style="height:45px">
                <td style='height:45px'><%= "#{slot[:slot_start]}:00 ~ #{slot[:slot_end]}:00" %></td>
                <% availabilities_per_day.each do |day, count| %>
                    <% unless (!@printing_option.print_saturday_availabilities && day == 6) || (!@printing_option.print_sunday_availabilities && day == 0) %>
                        <td style='color:black !important;height:45px;font-size:1.2em'><%= nurse_availability_icon(count) %></td>
                    <% end %>
                <% end %>
            </tr>
        <% end %>
    </tbody>
</table>

<div style='margin-top:30px;border:0.5px solid black;white-space:pre-wrap'><%= simple_format(@text) if @text.present? %></div>