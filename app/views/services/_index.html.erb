<div id="services_index" class="modal fade">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h1 class="colibri-small-title"><%= @corporation.equal_salary = true ? '事業所のサービス給与設定' : '#{@nurse.name}のサービス給与設定' %></h1>
				<button type="button" class="close" data-dismiss="modal">&times;</button>
			</div>

            <div class="modal-body">
                <table class="table table-hover">
                    <thead>
                        <tr >
                            <th>サービスタイプ</th>
                            <th>時給.単価</th>
                            <th>土日.祝日の給与.単価</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @services.each do |service| %>
                            <tr class="clickable-row service-clickable" data-service-link="<%= edit_nurse_service_path(@nurse, service, format: :js) %>">
                                <th><%= service.try(:title) %></th>
                                <th><%= service.try(:unit_wage) %></th>
                                <th><%= service.weekend_unit_wage.to_i if service.weekend_unit_wage.present? %></th>
                            </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
		</div>
	</div>

</div>