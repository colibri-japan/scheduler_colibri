$('.modal').modal('hide');
$('.modal-backdrop').remove();
$('.popover').popover('hide');
$('#remote_container').html('<%= j render "edit" %>');
$('#edit_appointment').modal('show');
appointmentSelectize();
appointmentSelectizeNursePatient();
toggleEditRequested();
