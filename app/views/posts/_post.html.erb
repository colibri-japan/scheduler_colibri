<div class="post-container" id="post-<%= post.id %>">
    <div class="post-header">
        <div class="post-author-wrapper"><%= post.author.name %><%= post_patients_names(post.patients.pluck(:name)) if post.patients.present? %></div>
        <div class="post-timestamps-wrapper"><%= post_was_published_at(post) %></div>
    </div>
    <div class="post-body post-clickable <%= 'unread-post' if @unread_ids.present? && @unread_ids.include?(post.id) %> <%= 'reminderable-post' if post.reminders.present? %>" data-url="<%= edit_post_path(post) %>">
        <%= simple_format(post.body) %>
    </div>
</div>