<% if @salary_line_item.verified? %>
    console.log('provided service verified')
    $('#provided-service-<%= @salary_line_item.id %>').html('<div><span class="glyphicon glyphicon-check"  style="color: #42B97C"></span></div><%= link_to "#{@salary_line_item.verifier.try(:name)} #{@salary_line_item.try(:verified_at).strftime('%y/%m/%d')}", toggle_verified_salary_line_item_path(@salary_line_item), remote: true, method: :patch, class: 'verified-at-and-by', data: {confirm: '実績の確認が解除されます'} %>')
<% else %>
    console.log('provided service not verified')
    $('#provided-service-<%= @salary_line_item.id %>').html('<%= link_to "確認１", toggle_verified_salary_line_item_path(@salary_line_item), method: :patch, remote: :true, class: "btn btn-success btn-sm" %>')
<% end %>