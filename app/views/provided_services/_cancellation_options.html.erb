<div id="cancellation_options" class="modal fade">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h1 class="colibri-small-title">キャンセルの手当.請求</h1>
				<button type="button" class="close" data-dismiss="modal">&times;</button>
			</div>

            <%= form_with model: @provided_service do |form| %>

                <div class="modal-body">
                    <div class="form-group">
                        <%= form.label :invoiced_total, "請求額" %>
                        <%= form.number_field :invoiced_total, {step: 1, class: 'form-control'} %>
                    </div>

                    <div class="form-group">
                        <%= form.label :total_wage, "手当" %>
                        <%= form.number_field :total_wage, {step: 1, class: 'form-control'} %>
                    </div>

                    <%= form.hidden_field :skip_wage_credits_and_invoice_calculations, value: true %>
                </div>

                <div class="modal-footer">
                    <%= form.submit "セーブする", class: 'btn btn-info' %>
                </div>
            
            <% end %>
		</div>
	</div>

</div>