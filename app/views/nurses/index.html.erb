<% if @planning.present? %>
  <%= render 'plannings/planning_nurses_submenu' %>
<% else %>
<% end %>

<div id="index-container">
  <% if @planning.nil? %>
  <%= link_to '+新規ヘルパー', new_nurse_path, class: 'btn btn-info text-white btn-margin-top' %>
  <% end %>

  <div id="index-table-container">
    <table class="<%= @planning ? 'table table-hover' : 'table' %>">
      <thead>
        <tr>
          <th class="table-important-fields">名前</th>
          <th class="table-important-fields">電話番号</th>
          <th class="table-important-fields">メール</th>
          <th class="table-important-fields">正社員</th>
          <th colspan='2'>アクション</th>
        </tr>
      </thead>

      <tbody>
        <% @nurses.each do |nurse| %>
          <tr class="<%= 'clickable-row' if @planning %>" data-link="<%= planning_nurse_path(@planning, nurse) if @planning %>">
            <td><%= nurse.name %></td>
            <td><%= nurse.phone_number %></td>
            <td><%= nurse.phone_mail %></td>
            <td>
              <% if nurse.full_timer == true %>
                <span class="glyphicon glyphicon-ok" style="color:green"></span>
              <% end %> 
            </td>
            <% if @planning.present? %>
              <td><%= link_to 'ヘルパーのスケジュールを変換する', planning_nurse_path(@planning, nurse) %></td>
            <% else %>
              <td><%= link_to 'エディット', edit_nurse_path(nurse), class: "btn btn-success btn-sm text-white" %></td>
              <td><%= link_to '削除', nurse_path(nurse), method: :delete, data: { confirm: 'ヘルパーとそのサービス.実績が削除されます。' }, class: 'btn btn-danger btn-sm text-white' %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>


</div>




  