<div id="services_index" class="modal fade">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h1 class="colibri-small-title"><%= "#{@nurse.name}の給与テーブル" %></h1>
				<button type="button" class="close" data-dismiss="modal">&times;</button>
			</div>

            <div class="modal-body">
                <table class="table table-hover">
                    <thead>
                        <tr >
                            <th>サービスタイプ</th>
                            <th>時給.単価</th>
                            <th>土日.祝日</th>
                            <th>全従業員</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @services.each do |service| %>
                            <tr class="clickable-row service-clickable" data-service-link="<%= edit_nurse_service_path(@nurse, service, format: :js) %>">
                                <td><%= service.try(:title) %></td>
                                <td><%= service.try(:unit_wage) %></td>
                                <td><%= service.weekend_unit_wage.to_i if service.weekend_unit_wage.present? %></td>
                                <td><span class="<%= 'glyphicon glyphicon-ok' if service.equal_salary == true %>" style="color: #42B97C"></span></td>
                            </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
		</div>
	</div>

</div>